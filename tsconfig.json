{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es2023", "DOM"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@data/*": [
        "src/data/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@validation/*": [
        "src/validation/*"
      ]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
